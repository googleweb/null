<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_repeat"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:gravity="center" >

        <Button
            android:id="@+id/carLoging_online_btn_query"
            style="@style/inspection_value"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/login_initial_setup_pree"
            android:text="@string/btu_seach" />

        <Button
            android:id="@+id/carLoging_online_btn_submit"
            style="@style/inspection_value"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/login_initial_setup_pree"
            android:text="@string/longin" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/lin1"
        android:scrollbars="@null" >

        <scxd.jcz.ajlw.android.model.ItemLayout
            android:id="@+id/carLogin_onlineLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </scxd.jcz.ajlw.android.model.ItemLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="170dp"
        android:background="@drawable/btn_up" />

    <Button
        android:id="@+id/btn_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="170dp"
        android:background="@drawable/btn_down" />

</RelativeLayout>